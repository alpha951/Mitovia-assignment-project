@model Mitovia.Models.UpdateMeasure

<h1>Edit Measure Detail</h1>

<form method="post" action="View" class="mt-5" onsubmit="return confirm('Are you sure you want to make this change?');">
    <div class="mb-3">
        <label for="" class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="ID" readonly placeholder="@Model.ID">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="@Model.Name">
    </div>


    <div class="mb-3">
        <label for="" class="form-label">Display Name</label>
        <input type="text" class="form-control" asp-for="DisplayName" placeholder="@Model.DisplayName">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description" placeholder="@Model.Description">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">ValueDial ID</label>
        <input type="text" class="form-control" asp-for="ValueDialID" placeholder="@Model.ValueDialID">
    </div>



    <button type="submit" class="btn btn-primary" asp-action="Update">Update</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Measures">Delete</button>

</form>
