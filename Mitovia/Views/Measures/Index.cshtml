@model List<Mitovia.Models.Measure>;

<h1>Measures List</h1>

@{

    if (Model.Count == 0)
    {
        <p>No Measure found</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">OrgID</th>
                    <th scope="col">EntityID</th>
                    <th scope="col">Name</th>
                    <th scope="col">DisplayName</th>
                    <th scope="col">Description</th>
                    <th scope="col">LastUpdatedDate</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var measure in Model)
                {
                    <tr>
                        <td>@measure.ID</td>
                        <td>@measure.OrgID</td>
                        <td>@measure.EntityID</td>
                        <td>@measure.Name</td>
                        <td>@measure.DisplayName</td>
                        <td>@measure.Description</td>
                        <td>@measure.LastUpdatedDate</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}